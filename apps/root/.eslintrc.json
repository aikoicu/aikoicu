{
  "extends": [
    "../../.eslintrc.json",
    "plugin:@next/next/recommended"
  ],
  "ignorePatterns": [
    "!**/*"
  ],
  "overrides": [
    {
      "files": [
        "*.ts",
        "*.tsx",
        "*.js",
        "*.jsx"
      ],
      "parserOptions": {
        "project": [
          "./tsconfig.json"
        ],
        "ecmaFeatures": {
          "jsx": true
        }
      },
      "settings": {
        "import/resolver": {
          "alias": {
            "map": [
              [
                "~",
                "./src"
              ]
            ],
            "extensions": [
              ".ts",
              ".js",
              ".jsx",
              ".json"
            ]
          }
        },
        "react": {
          "version": "detect"
        }
      },
      "rules": {
        "react/no-unknown-property": [
          2,
          {
            "ignore": [
              "jsx",
              "global"
            ]
          }
        ]
      }
    },
    {
      "files": [
        "*.ts",
        "*.tsx"
      ],
      "rules": {}
    },
    {
      "files": [
        "*.js",
        "*.jsx"
      ],
      "rules": {}
    }
  ]
}
