{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": "src/",
    "paths": {
      "@/*": ["./*"],
      "public/*": ["../public/*"]
    },
    "composite": true,
    "allowJs": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    "experimentalDecorators": true,
    "sourceMap": false,
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "types": [
      "next",
      "next/types/global",
      "next/image-types/global",
      "@types/node",
      "@types/react",
      "node",
      "./src/types"
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.js",
    "**/*.jsx",
    "**/*.json",
    "next-sitemap.js",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
