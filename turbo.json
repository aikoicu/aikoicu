{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local", "./.env.*local", ".env"],
  "globalEnv": ["SESSION_SECRET, NODE_ENV"],
  "pipeline": {
    "dev": {
      "cache": false,
      "persistent": true
    },
    "start": {
      "cache": false
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", "build/**", ".next/**", "!.next/cache/**", "public/**"]
    },
    "test": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**", "public/dist/**"]
    },
    "test:watch": {
      "cache": false
    },
    "lint": {},
    "lint:ts": {},
    "lint:fix": {},
    "lint:es": {},
    "lint:es:fix": {},
    "lint:css": {},
    "lint:css:fix": {},
    "formatter": {},
    "turbo:prune": {
      "cache": false
    }
  }
}
